# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md}]
indent_size = 4

[*.sh]
end_of_line = lf

[**/git/config.tmpl]
indent_style = tab
indent_size = 4
