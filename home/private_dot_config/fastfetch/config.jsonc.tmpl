    },
    {
      "format": "╭─{$5}─╮",
      "outputColor": "38;2;237;145;171",
      "type": "custom"
    },
    {
      "color": {
        "at": "bright_white",
        "host": "bright_white",
        "user": "bright_white"
      },
      "key": "│      User:{$1} │",
      "keyColor": "38;2;237;145;171",
      "type": "title"
    },
    {
