    },
    {
      "key": "│        WM:{$1} │",
      "keyColor": "38;2;170;89;219",
      "type": "wm"
    },
    {
      "key": "│     Theme:{$1} │",
      "keyColor": "38;2;170;89;219",
      "type": "theme"
    },
    {
      "key": "│  WM Theme:{$1} │",
