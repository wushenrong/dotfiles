{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/master/doc/json_schema.json",
  "display": {
    // From: https://github.com/fastfetch-cli/fastfetch/discussions/971#discussioncomment-12628729
    "constants": [
      "\u001b[66C", // $1: Move cursor forward 77 columns (adjust if needed)
      "\u001b[66D", // $2: Move cursor back 77 columns (not used, defined anyway)
      "\u001b[79C", // $3: Move cursor to max width (wide term), or last column (narrow term)
      "\u001b[20D", // $4: Move back 20 columns for the color block (both lines)
      "────────────────────────────────────────────────────────────────────────────"
    ],
    "key": {
      "width": 14
    },
    "separator": "",
    "size": {
      "binaryPrefix": "jedec"
    }
  },
  "logo": {
    "padding": {
      "left": 2,
      "right": {{ if (eq .chezmoi.os "windows") -}}3{{- else -}}2{{- end -}},
      "top": 2
    },
    {{- if (eq .chezmoi.os "windows") }}
    "source": "~/Pictures/Terminal/sixel/feli_ppt2_7.sixel",
    "type": "raw",
    {{- else }}
    "source": "~/Pictures/Terminal/*.png",
    "type": "kitty-direct",
    {{- end }}
    "width": 36
  },
  "modules": [
    "break",
    {
      "format": "╭─{$5}─╮",
      "outputColor": "38;2;232;47;103",
      "type": "custom"
    },
    {
      "key": "│        OS:{$1} │",
      "keyColor": "38;2;232;47;103",
      "type": "os"
    },
    {
      "key": "│      Host:{$1} │",
      "keyColor": "38;2;232;47;103",
      "type": "host"
    },
    {
      "key": "│    Kernel:{$1} │",
      "keyColor": "38;2;232;47;103",
      "type": "kernel"
    },
    {
      "key": "│    Uptime:{$1} │",
      "keyColor": "38;2;232;47;103",
      "type": "uptime"
    },
    {
      "key": "│  Packages:{$1} │",
      "keyColor": "38;2;232;47;103",
      "type": "packages"
    },
    {
      "key": "│     Shell:{$1} │",
      "keyColor": "38;2;232;47;103",
      "type": "shell"
    },
    {
      "key": "│  Terminal:{$1} │",
      "keyColor": "38;2;232;47;103",
      "type": "terminal"
    },
    {
      "format": "╰─{$5}─╯",
      "outputColor": "38;2;232;47;103",
      "type": "custom"
    },
    {
      "format": "╭─{$5}─╮",
      "outputColor": "38;2;170;89;219",
