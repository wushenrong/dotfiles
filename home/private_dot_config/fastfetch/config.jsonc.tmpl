      "keyColor": "38;2;237;145;171",
      "type": "localip"
    },
    {
      "key": "│    Locale:{$1} │",
      "keyColor": "38;2;237;145;171",
      "type": "locale"
    },
    {
      "format": "╰──{$5}{$4}┬─ {#black} {#red} {#green} {#yellow} {#blue} {#magenta} {#cyan} {#white}{#38;2;237;145;171} ─┤",
      "outputColor": "38;2;237;145;171",
      "type": "custom"
    },
    {
      "format": "{$3}{$4}╰─ {#bright_black} {#bright_red} {#bright_green} {#bright_yellow} {#bright_blue} {#bright_magenta} {#bright_cyan} {#bright_white}{#reset_default}{#38;2;237;145;171} ─╯",
      "outputColor": "38;2;237;145;171",
      "type": "custom"
    },
    "break"
  ]
}
