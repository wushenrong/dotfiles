# General settings
#

font pango:Cascadia Code NF 12
focus_follows_mouse no
workspace_back_and_forth yes

# Gaps between windows
gaps inner 8px
gaps outer 8px

# Windows effects
default_border pixel 2px
default_floating_border pixel 2px

# Requires swayfx
corner_radius 8

for_window [all] opacity 0.9

# Rules for processes
assign [app_id="firefox"] -> Web
assign [app_id="code"] -> Code
assign [app_id="kitty"] -> Terminal
assign [app_id="discord"] -> Discord
assign [app_id="steam"] -> Gaming

#
# Display configuration
#

# Wallpaper
output * bg ~/Pictures/wallpaper.jpg fill

#
# Idle configuration
#

exec swayidle -w \
  timeout 180 'swaymsg "output * power off"' \
  resume 'swaymsg "output * power on"' \
  timeout 180 'systemctl sleep' \
  before-sleep 'swaylock'

#
# Input configuration
#

# Example configuration:
#
#   input "2:14:SynPS/2_Synaptics_TouchPad" {
#       dwt enabled
#       tap enabled
#       natural_scroll enabled
#       middle_emulation enabled
#   }
#
# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.

#
# Keybindings
#

# Variables for keybindings
set $mod Mod4

set $left h
set $down j
set $up k
set $right l

set $term kitty
set $menu pgrep wofi >/dev/null 2>&1 && killall wofi || wofi --show drun
set $file_explorer nautilus
set $screenshot grim -g "$(slurp)" - | swappy -f -

# Basic keybindings
floating_modifier $mod normal

bindsym $mod+Return exec $term
bindsym $mod+d exec $menu
bindsym $mod+e exec $file_explorer
bindsym Print exec $screenshot

bindsym $mod+Shift+r reload
bindsym $mod+Shift+w restart
bindsym $mod+q kill

bindsym $mod+Shift+e exec swaynag \
  -t warning \
  -m 'Do you want to exit sway?' \
  -B 'Sleep' 'systemctl sleep' \
  -b 'Reboot' 'systemctl reboot' \
  -B 'Shutdown' 'systemctl poweroff' \
  -B 'Logoff' 'swaymsg exit'

# Moving focus
bindsym $mod+$left focus left
bindsym $mod+$down focus down
bindsym $mod+$up focus up
bindsym $mod+$right focus right

# Moving focused window
bindsym $mod+Shift+$left move left
bindsym $mod+Shift+$down move down
bindsym $mod+Shift+$up move up
bindsym $mod+Shift+$right move right

#
# Workspaces
#

# Switch to workspace
bindsym $mod+1 workspace Web
bindsym $mod+2 workspace Code
bindsym $mod+3 workspace Terminal
bindsym $mod+4 workspace Discord
bindsym $mod+5 workspace Gaming
bindsym $mod+6 workspace Media
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace Web
bindsym $mod+Shift+2 move container to workspace Code
bindsym $mod+Shift+3 move container to workspace Terminal
bindsym $mod+Shift+4 move container to workspace Discord
bindsym $mod+Shift+5 move container to workspace Gaming
bindsym $mod+Shift+6 move container to workspace Media
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Change tiling direction
bindsym $mod+v split toggle

# Make the current focus fullscreen
bindsym $mod+f fullscreen

# Change the current focus to be floating
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# Resizing containers
mode "resize" {
  # left will shrink the containers width
  # right will grow the containers width
  # up will shrink the containers height
  # down will grow the containers height
  bindsym $left resize shrink width 10px
  bindsym $down resize grow height 10px
  bindsym $up resize shrink height 10px
  bindsym $right resize grow width 10px

  # Ditto, with arrow keys
  bindsym Left resize shrink width 10px
  bindsym Down resize grow height 10px
  bindsym Up resize shrink height 10px
  bindsym Right resize grow width 10px

  # Return to default mode
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

#
# Scratchpad:
#

# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.

# Move the currently focused window to the scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $mod+minus scratchpad show

#
# Utilities:
#

# Special keys to adjust volume via WirePlumber
bindsym --locked XF86AudioMute exec wpctl set-mute \@DEFAULT_AUDIO_SINK@ toggle
bindsym --locked XF86AudioLowerVolume exec wpctl set-volume \@DEFAULT_AUDIO_SINK@ 5%- -l 1.0
bindsym --locked XF86AudioRaiseVolume exec set-volume \@DEFAULT_AUDIO_SINK@ 5%+ -l 1.0
bindsym --locked XF86AudioMicMute exec wpctl set-mute \@DEFAULT_AUDIO_SOURCE@  toggle

# Special keys to adjust brightness via brightnessctl
bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+

# Import theme from settings.ini
exec_always import-gsettings

# Load additional configuration for loading environment variables
include /etc/sway/config.d/*
