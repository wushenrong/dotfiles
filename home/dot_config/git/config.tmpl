[user]
	name = {{ .name }}
	email = {{ .email }}
	signingKey = 5C5400B08A9A51A3BF1BC1176DA8EF9135CAA64C

[commit]
	gpgSign = true

[tag]
	gpgSign = true

[core]
	editor = code --wait
	pager = delta
	whitespace = trailing-space

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	autoSquash = true
	default = current

[rebase]
	autostash = true

[rerere]
	autoupdate = true
	enabled = true

[status]
	submoduleSummary = true

[alias]
	alias = config get --all --global --regexp alias

	a = add
	aa = add --all

	c = commit --verbose
	ca = commit --all --verbose
	cm = commit --message
	cam = commit --all --message

	cl = clone --recurse-submodules

	co = checkout
	cob = checkout -b
	cop = checkout -
	com = checkout main

	d = diff
	dc = diff --cached

	p = push
	pl = pull

	rb = rebase
	rbc = rebase --continue
	rbi = rebase --interactive

	s = status

	st = stash

[format]
	signoff = true

[delta]
	hyperlinks = true
	navigate = true
	side-by-side = true

[interactive]
	diffFilter = delta --color-only

[merge]
	conflictstyle = diff3

{{ if eq .chezmoi.os "windows" -}}
[gpg]
	program = C:\\Program Files (x86)\\GnuPG\\bin\\gpg.exe
{{ else if (and (eq .chezmoi.os "linux") (.chezmoi.kernel.osrelease | lower | contains "microsoft")) -}}
[gpg]
	program = /mnt/c/Program Files (x86)/GnuPG/bin/gpg.exe

[credential]
	helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe
{{ end -}}
