# Git Setup
[user]
	name = {{ .name }}
	email = {{ .email }}
	signingKey = ~/.ssh/id_main_key

[core]
	compression = 9
	editor = code -w
	whitespace = error
	pager = delta
	preloadindex = true

[advice]
	addEmptyPathspec = false
	pushNonFastForward = false
	statusHints = false

[init]
	defaultBranch = main

[column]
	ui = auto

[help]
	autocorrect = prompt

# Git Status
[status]
	branch = true
	showStash = true
	showUntrackedFiles = all
	submoduleSummary = true

# Git Diff
[merge]
	autoStash = true
	conflictStyle = zdiff3

[interactive]
	diffFilter = delta --color-only

[diff]
	algorithm = histogram
	context = 3
	colorMoved = plain
	interHunkContext = 10
	mnemonicPrefix = true
	renames = true

[delta]
	line-numbers = true
	navigate = true
	syntax-theme = Visual Studio Dark+
	tabs = 2

# Git Commit
[commit]
	gpgSign = true
	template = ~/.config/git/template
	verbose = true

# Git Pull, Push, and Rebase
[fetch]
	all = true
	prune = true
	pruneTags = true

[pull]
	rebase = interactive

[push]
	autoSetupRemote = true
	autoSquash = true
	followTags = true
	recurseSubmodules = on-demand

[submodule]
	fetchJobs = 16
	recurse = true

[rebase]
	abbreviateCommands = true
	autoStash = true
	autoSquash = true
	missingCommitsCheck = error
	updateRefs = true

[rerere]
	autoUpdate = true
	enabled = true

# Git Branch, Tag, and Log
[branch]
	sort = -committerdate

[tag]
	gpgSign = true
	sort = version:refname

[log]
	abbrevCommit = true

# Git Alias
[alias]
	amend = commit -p --amend
	graph = log --oneline --graph --all

	a = add -p

	b = branch
	ba = branch -a

	c = commit -p

	cl = clone --recursive

	d = diff --stat
	dl = diff
	ds = diff --stat --staged
	dsl = diff --staged

	l = log

	p = push
	pf = push --force-with-lease --force-if-includes

	pl = pull

	r = restore -p
	rs = restore -p --staged
	rsw = restore -p --staged --worktree

	rb = rebase -i
	rba = rebase --abort
	rbc = rebase --continue
	rbr = rebase -i --root

	s = status -sb
	sl = status

	sm = submodule
	sma = submodule add
	sms = submodule status
	smu = submodule update --init --recursive

	st = stash -p
	sta = stash apply
	std = stash drop
	stl = stash list
	stp = stash pop

	sw = switch
	swc = switch -c
	swp = switch -
	swm = switch main

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[gpg]
	format = ssh

{{ if (and (eq .chezmoi.os "linux") (.chezmoi.kernel.osrelease | lower | contains "microsoft")) }}
[credential]
	helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe
{{ end -}}
