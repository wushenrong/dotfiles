[user]
	name = {{ .name }}
	email = {{ .email }}
	signingKey = 5C5400B08A9A51A3BF1BC1176DA8EF9135CAA64C

[commit]
	gpgSign = true

[tag]
	gpgSign = true

[core]
	editor = code --wait
	pager = delta
	whitespace = trailing-space

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	autoSetupRemote = true
	autoSquash = true

[rebase]
	abbreviateCommands = true
	autoStash = true
	autoSquash = true

[rerere]
	autoUpdate = true
	enabled = true

[status]
	submoduleSummary = true

[alias]
	alias = config get --all --global --regexp alias
	amend = commit -asv --amend

	a = add
	aa = add -A

	b = branch
	ba = branch -a
	bd = branch -d
	bdf = branch -df

	c = commit -sv
	ca = commit -asv
	caa = commit -asv --amend
	caan = commit -asv --amend --no-edit
	cm = commit -sm
	cam = commit -asm

	cl = clone --recurse-submodules

	co = checkout
	cob = checkout -b
	cop = checkout -
	com = checkout main

	d = diff --stat
	dc = diff --cached --stat

	f = fetch
	fo = fetch origin
	fop = fetch origin -p
	fp = fetch -p

	fd = diff
	fdc = diff --cached
	fs = status

	l = log --oneline

	p = push
	pf = push --force-with-lease --force-if-includes

	pl = pull
	plp = pull -p

	r = reset
	rhard = reset --hard
	rk = reset --keep
	rs = reset --soft

	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbcn = rebase --continue --no-edit
	rbi = rebase -i --signoff
	rbir = rebase -i --signoff --root

	s = status -s

	st = stash
	sta = stash apply
	std = stash drop
	stl = stash list
	stm = stash -m
	stp = stash pop

	sub = submodule
	suba = submodule add
	subi = submodule update --init --recursive
	subs = submodule status
	subu = submodule update --recursive --remote

[delta]
	hyperlinks = true
	navigate = true

[interactive]
	diffFilter = delta --color-only

[merge]
	autoStash = true
	conflictStyle = zdiff3

{{ if eq .chezmoi.os "windows" -}}
[gpg]
    program = C:\\Program Files (x86)\\GnuPG\\bin\\gpg.exe
{{ else if (and (eq .chezmoi.os "linux") (.chezmoi.kernel.osrelease | lower | contains "microsoft")) -}}
[gpg]
	program = /mnt/c/Program Files (x86)/GnuPG/bin/gpg.exe

[credential]
	helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager.exe
{{ end -}}
