".config/mpv":
  type: archive
  url: https://github.com/wushenrong/mpv-config/archive/main.tar.gz
  stripComponents: 1
  refreshPeriod: 168h

".config/vivid/filetype.yml":
  type: file
  url: https://raw.githubusercontent.com/sharkdp/vivid/master/config/filetypes.yml
  refreshPeriod: 168h

{{ if (eq .chezmoi.os "linux") -}}
".config/kitty/VSCode_Dark.conf":
  type: file
  url: https://raw.githubusercontent.com/kovidgoyal/kitty-themes/master/themes/VSCode_Dark.conf

".config/nano/extras":
  type: archive
  url: https://github.com/galenguyer/nano-syntax-highlighting/archive/master.tar.gz
  exact: true
  stripComponents: 1
  refreshPeriod: 168h

".config/tmux/plugins/tpm":
  type: archive
  url: https://github.com/tmux-plugins/tpm/archive/refs/heads/master.tar.gz
  exact: true
  stripComponents: 1
  refreshPeriod: 168h

".config/zsh":
  type: archive
  url: https://github.com/wushenrong/zdotdir/archive/main.tar.gz
  stripComponents: 1
  refreshPeriod: 168h

".config/zsh/antidote":
  type: archive
  url: https://github.com/mattmc3/antidote/archive/main.tar.gz
  exact: true
  stripComponents: 1
  refreshPeriod: 168h

{{ if (not (findExecutable "vivid" (list "/usr/bin" ".local/bin") ))}}
".local/bin/vivid":
  type: archive-file
  url: https://github.com/sharkdp/vivid/releases/download/v0.10.1/vivid-v0.10.1-x86_64-unknown-linux-gnu.tar.gz
  executable: true
  path: vivid-v0.10.1-x86_64-unknown-linux-gnu/vivid
{{ end }}

{{ if (not (findExecutable "eza" (list "/usr/bin" ".local/bin") ))}}
".local/bin/eza":
  type: archive-file
  url: {{ gitHubLatestReleaseAssetURL "eza-community/eza" "eza_x86_64-unknown-linux-gnu.tar.gz" }}
  executable: true
  path: ./eza
{{ end }}

{{ if (not (findExecutable "scc" (list "/usr/bin" ".local/bin") ))}}
".local/bin/scc":
  type: archive-file
  url: {{ gitHubLatestReleaseAssetURL "boyter/scc" "scc_Linux_x86_64.tar.gz" }}
  executable: true
  path: scc
{{ end -}}
{{ end -}}
